{% extends "layouts/default.njk" %}

{% block content %}


<div class=" w-screen" style="background: url(/images/fondo.jpeg) no-repeat center center;background-size:cover ;">
    {% include "partials/top.njk" %}
    <div class="container bg-gradient-to-r from-green-400 to-blue-500 p-5 m-auto">
        <h1 class="uppercase text-center pt-10 sm:text-lg md:text-3xl lg:text-5xl bold font-letraHeader">restaurantes
        </h1><br>
        <p class="text-center text-white">Cocina mediterránea en un lugar singular,mediterráneo en vivo.
        </p><br>
    </div>
    <br>
    <div
        class="container m-auto grid grid-cols-1 content-center justify-center items-center bg-white bg-opacity-50 rounded-xl ">
        {% set incremento = 0 %}

        {% for res in restaurante %}


        {% set incremento = (incremento + 1) %}



        <div class="padre  pt-10 sm:pb-3 lg:pt-24 lg:pb-6 md:pt-20 md:pb-4 text-center" id="{{incremento}}">

            <div class="hijo md:flex card-zoom" data-aos="fade-up" data-aos-duration="2000">
                <a href="/{{res.tituloRestaurante | slug }}">
                    <img src="{{res.imagen.url}}" alt=""
                        class="md:w-[250px] lg:w-[300px] xl:w-[350px] card-zoom-image object-cover">
                </a>
                <div class="md:w-1/2 ">
                    <a href="/{{res.tituloRestaurante | slug }}">
                        <h2 class="titulo py-5 px-5 sm:text-lg md:text-xl lg:text-3xl uppercase md:float-left">
                            {{res.tituloRestaurante}}</h2>
                    </a>
                    <p class="parrafo text-xs text-gray-600 py-5 px-5 md:w-1/2 md:float-left">
                        {{res.descripcionRestaurante}}</p>
                

                </div>
                
            </div>
            <a href="/{{res.tituloRestaurante | slug }}"
                class="py-2 px-2  md:py-5 md:px-5 bg-blue-400 rounded-xl uppercase text-white h-1/2 "> leer más</a>

        </div>
        {% endfor %}

    </div>

    <br>
</div>



{% include "partials/footer.njk" %}
{% endblock %}