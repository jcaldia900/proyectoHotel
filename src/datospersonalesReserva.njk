                </div>

            </div>

        </div>
        <br>
        <div class="bg-gray-200 h-[300px]">
            <h3 class="uppercase text-center p-5 text-base md:text-lg lg:text-xl text-gray-500 underline">resumen</h3>
            <div class="flex items-center justify-between m-auto w-4/5 py-6">

                <h3 class="uppercase text-gray-500 text-xs md:text-base lg:text-lg p-5 ">Fecha Entrada <p
                        id="fechaEntrada" class="py-2  text-xs  lg:text-base text-black"></p>
                </h3>
                <h3 class="uppercase text-gray-500 text-xs md:text-base lg:text-lg p-5 ">Fecha Salida <p
                        id="fechaSalida" class="py-2  text-xs lg:text-base text-black"></p>
                </h3>
                <h3 class="uppercase text-gray-500 text-xs md:text-base lg:text-lg p-5 ">Precio Final <p
                        id="precioFinal" class="py-2 text-xs lg:text-base text-black"></p>
                </h3>
                <h3 class="uppercase text-gray-500 text-xs md:text-base lg:text-lg p-5 ">Habitación <p id="textoHab"
                        class="py-2 text-xs  lg:text-base text-black"></p>
                </h3>
                <h3 class="uppercase text-gray-500 text-xs md:text-base lg:text-lg p-5 "> <img src="" id="textoHab">
                </h3>

            </div>
        </div>

        <script>


            let fechaEntrada = getParameterByEntrada('fechaE');;
            let fechaSalida = getParameterBySalida('fechaS');;

            fechaEntrada = fechaEntrada.split("/").reverse().join("-");
            fechaSalida = fechaSalida.split("/").reverse().join("-");
            let entrada = new Date(fechaEntrada).getTime();

            let salida = new Date(fechaSalida).getTime();

            let diffTime = Math.abs(salida - entrada);
            let diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));


            function getParameterByEntrada(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            var prodIdE = getParameterByEntrada('fechaE');
            var fechaE = document.getElementById("fechaEntrada")
            fechaE.innerHTML = prodIdE;



            function getParameterBySalida(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            var prodIdS = getParameterBySalida('fechaS');
            var fechaS = document.getElementById("fechaSalida")
            fechaS.innerHTML = prodIdS;






            function getParameterByHab(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            var prodHab = getParameterByHab('hab');


            function getParameterByNP(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            var prodNP = getParameterByNP('n_P');

            function getParameterByR(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            var prodR = getParameterByR('reg');



            var precio = document.getElementById("precioFinal")
            var precioFinal = parseInt(prodHab) * diffDays + parseInt(prodNP * prodR) * diffDays + "€"
            precio.innerHTML = precioFinal;


            function getParameterByTipo(name) {
                name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
            var tipoUrl = getParameterByTipo('tipoH');
            var tipo = document.getElementById("textoHab")
            tipo.innerHTML = tipoUrl;



           
                function datosPSiguiente() {
                    if (document.getElementById("nombrePersona").value !== "" && document.getElementById("apellidosPersona").value !== "" && document.getElementById("emailPersona").value !== "" && document.getElementById("telefonoPersona").value !== "" && document.getElementById("numeroTarjeta").value !== "" && document.getElementById("numeroTarjeta").value !== "" && document.getElementById("caducidadTarjeta").value !== "") {
                    let params = {
                        nom: document.getElementById("nombrePersona").value,
                        apel: document.getElementById("apellidosPersona").value,
                        mail: document.getElementById("emailPersona").value,
                        tfno: document.getElementById("telefonoPersona").value,
                        tar: document.getElementById("numeroTarjeta").value,
                        tit: document.getElementById("numeroTarjeta").value,
                        cad: document.getElementById("caducidadTarjeta").value,



                        // dif: document.getElementById("demo").value
                    };

                    let query = Object.keys(params)
                        .map((k) => encodeURIComponent(k) + "=" + encodeURIComponent(params[k]))
                        .join("&");

                    window.location.href = "http://localhost:8080/confirmacionReserva?" + query;

                    fetch(window.location.href)
                        .then((data) => data.text())
                        .then((text) => {
                            console.log("request succeeded with JSON response", text);
                        })
                        .then((params) => {
                            console.log("Debe introducir los datos", params);
                        })
                        .catch(function (error) {
                            console.log("request failed", error);
                        });

                }else{
                alert("Los campos están vacíos, por favor revise")
            }
            }
        </script>

        <div class="flex items-center justify-center ">

            <a href="/reserva">
                <input type="button" value="atrás" class="px-7 py-5 bg-blue-400 m-6 rounded-xl uppercase text-white ">
            </a>
            <input type="button" value="finalizar" class="p-5 bg-blue-400 m-6 rounded-xl uppercase text-white "
                onclick="datosPSiguiente()" data-precio="{{hab.precioHabitacion}}"
                data-nombre="{{hab.tituloHabitacion}}">

        </div>
