        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div><br>
    <div class="lg:flex lg:items-center lg:justify-center " style="width: 80%;margin: auto">
        <div class="flex items-center lg:w-1/2 sm:mb-10 lg:mb-5 xl:mb-0" >
