{% extends "layouts/default.njk" %}

{% block content %}



<div class=" w-screen h-[600px] relative"
    style="background: url(/images/servicios.jpeg) no-repeat center center;background-size:cover ;">

    <div class="velo">

    </div>
    {% include "partials/top.njk" %}
    <div class="container m-auto ">
        <h2 class="uppercase text-center text-5xl p-5 font-letraHeader text-white relative ">servicios</h2><br>
        <h3 class="uppercase text-center text-2xl p-5 font-letraHeader text-blue-300 relative">garant√≠a con detalles
        </h3>
    </div>
</div>
<div class="container m-auto">
    <div 
        data-aos="fade-up" data-aos-offset="300" data-aos-easing="ease-in-sine">

        <h2 class="text-center  text-blue-500 underline uppercase p-10">servicios gratuitos</h2>
        <div class="flex flex-col md:flex-row">
            <div class="grid grid-cols-2 lg:w-2/4">
                {% for ser in servicio %}
                {% if ser.gratuito==true %}

                <div class="flex justify-start items-start pt-5 sm:pb-2 lg:pt-10 lg:pb-4 md:pt-8 md:pb-2 text-center">
                    <div class=" flex flex-row card-zoom  justify-center items-center lg:w-2/4 ">
                        <img src="{{ser.iconoServicio.url}}" alt=""
                            class="w-[20px] lg:w-[30px] xl:w-[40px] h-[20px] lg:h-[30px] xl:h-[40px] card-zoom-image object-cover">

                        <p class="titulo md:py-5 md:px-5 text-xs md:text-base lg:text-lg uppercase w-full">
                            {{ser.nombreServicio}}</p>

                    </div>

                </div>

                {% endif %}

                {% endfor %}


            </div>


            <div class="flex flex-col h-[200px] md:w-[350px] md:h-[350px] lg:w-[500px] lg:h-[500px]">

                <!-- Swiper -->
                <div class="swiper-container gallery-top">
                    <div class="swiper-wrapper">
                        {% for slider in slider %}
                        {% if slider.categoria=="servicio gratuito" %}
                        <div class="swiper-slide"
                            style="background:url({{slider.imagen.url}}) no-repeat center center;background-size:cover"></div>
                            {% endif %}
                            {% endfor %}

                    </div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next swiper-button-white"></div>
                    <div class="swiper-button-prev swiper-button-white"></div>
                </div>
                <div class="swiper-container gallery-thumbs">
                    <div class="swiper-wrapper">
                        {% for slider in slider %}
                        {% if slider.categoria=="servicio gratuito" %}

                        <div class="swiper-slide"
                            style="background:url({{slider.imagen.url}}) no-repeat center center;background-size:cover ">
                        </div>

                        {% endif %}
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
        <br>
    </div>

    
    <div 
        data-aos="fade-up" data-aos-offset="300" data-aos-easing="ease-in-sine">

        <h2 class="text-center text-blue-500 underline uppercase p-10">servicios pago</h2>
        <div class="flex flex-col md:flex-row">
            <div class="grid grid-cols-2 lg:w-2/4">
                {% for ser in servicio %}
                {% if ser.gratuito==false %}

                <div class="flex justify-start items-start pt-5 sm:pb-2 lg:pt-10 lg:pb-4 md:pt-8 md:pb-2 text-center">
                    <div class=" flex flex-row card-zoom  justify-center items-center lg:w-2/4 ">
                        <img src="{{ser.iconoServicio.url}}" alt=""
                            class="w-[20px] lg:w-[30px] xl:w-[40px] h-[20px] lg:h-[30px] xl:h-[40px] card-zoom-image object-cover">

                        <p class="titulo md:py-5 md:px-5 text-xs md:text-base lg:text-lg uppercase w-full">
                            {{ser.nombreServicio}}</p>

                    </div>

                </div>

                {% endif %}

                {% endfor %}


            </div>
            <div class="flex flex-col h-[200px] md:w-[350px] md:h-[350px] lg:w-[500px] lg:h-[500px]">

                <!-- Swiper -->
                <div class="swiper-container gallery-top">
                    <div class="swiper-wrapper">
                        {% for slider in slider %}
                        {% if slider.categoria=="servicio pago" %}
                        <div class="swiper-slide"
                            style="background:url({{slider.imagen.url}}) no-repeat center center;background-size:cover"></div>
                            {% endif %}
                            {% endfor %}

                    </div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next swiper-button-white"></div>
                    <div class="swiper-button-prev swiper-button-white"></div>
                </div>
                <div class="swiper-container gallery-thumbsDos">
                    <div class="swiper-wrapper">
                        {% for slider in slider %}
                        {% if slider.categoria=="servicio pago" %}

                        <div class="swiper-slide"
                            style="background:url({{slider.imagen.url}}) no-repeat center center;background-size:cover ">
                        </div>

                        {% endif %}
                        {% endfor %}
                    </div>
                </div>

            </div>
           
        </div>
        <br>
    </div>
</div>
{% include "partials/footer.njk" %}
{% endblock %}